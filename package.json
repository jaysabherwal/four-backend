{
  "name": "server",
  "version": "0.1.0",
  "bin": {
    "server": "bin/server.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "npm run pre-deploy && cdk deploy '*' --require-approval 'never'",
    "invoke:game": "sam local invoke Game -t local/template.yml -e local/event.json --region eu-west-1",
    "prepare": "rm -rf artifacts & rm -rf build && mkdir -p artifacts build",
    "copy": "cp package.json ./build && cp package-lock.json ./build && cp tsconfig.json ./build && cp -R ./lambda-fns ./build",
    "install-deps": "cd build && npm install --production && npm run build",
    "zip-game": "cd ./build/lambda-fns && zip -r ../../artifacts/game.zip ./game",
    "zip-disconnect": "cd ./build/lambda-fns && zip -r ../../artifacts/disconnect.zip ./disconnect",
    "zip-nodemodules": "cd build && zip -r ../artifacts/nodemodules.zip ./node_modules",
    "rm-nodemodules": "cd build && rm -rf node_modules",
    "pre-deploy": "npm run prepare && npm run copy && npm run install-deps && npm run zip-nodemodules && npm run rm-nodemodules && npm run zip-game && npm run zip-disconnect"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.109.0",
    "@types/aws-lambda": "^8.10.77",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.18.1",
    "@types/shortid": "0.0.29",
    "aws-cdk": "1.109.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "~4.1.3"
  },
  "dependencies": {
    "@aws-cdk/aws-apigateway": "1.109.0",
    "@aws-cdk/aws-apigatewayv2": "1.109.0",
    "@aws-cdk/aws-apigatewayv2-integrations": "1.109.0",
    "@aws-cdk/aws-dynamodb": "1.109.0",
    "@aws-cdk/aws-iam": "1.109.0",
    "@aws-cdk/aws-lambda": "1.109.0",
    "@aws-cdk/core": "1.109.0",
    "aws-sdk": "2.931.0",
    "shortid": "^2.2.16",
    "source-map-support": "^0.5.19"
  }
}
