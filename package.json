{
  "name": "server",
  "version": "0.1.0",
  "bin": {
    "server": "bin/server.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "setup-db": "docker run -p 8000:8000 amazon/dynamodb-local",
    "create-db": "./scripts/create-db.sh",
    "invoke:create": "sam local invoke Game -t local/template.yml -e local/event/create.json --region eu-west-1",
    "invoke:join": "sam local invoke Game -t local/template.yml -e local/event/join.json --region eu-west-1",
    "invoke:move": "sam local invoke Game -t local/template.yml -e local/event/move.json --region eu-west-1",
    "build-functions": "make",
    "deploy": "npm run build-functions && cdk deploy '*' --require-approval 'never'"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.109.0",
    "@types/aws-lambda": "^8.10.77",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.18.1",
    "@types/shortid": "0.0.29",
    "aws-cdk": "1.109.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "~4.1.3"
  },
  "dependencies": {
    "@aws-cdk/aws-apigateway": "1.109.0",
    "@aws-cdk/aws-apigatewayv2": "1.109.0",
    "@aws-cdk/aws-apigatewayv2-integrations": "1.109.0",
    "@aws-cdk/aws-dynamodb": "1.109.0",
    "@aws-cdk/aws-iam": "1.109.0",
    "@aws-cdk/aws-lambda": "1.109.0",
    "@aws-cdk/core": "1.109.0",
    "aws-sdk": "2.931.0",
    "lambda-log": "^3.1.0",
    "shortid": "^2.2.16",
    "source-map-support": "^0.5.19"
  }
}
